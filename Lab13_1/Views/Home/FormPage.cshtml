
@{
    ViewData["Title"] = "Form Page";
}
<style>
    .error{
        font-weight: bold;
        color: red;
        font-size: 90%;
        display: inline-block
    }
</style>

<h1>Form Page</h1>

<div id="allfieldsmessage" class="error"></div>

<form id="form" method="post" action="/home/processform">
    <label>First Name:</label> <input type="text" id="firstname" name="firstname" /><div id="firstnamemessage" class="error"></div><br />
    <label>Last Name:</label> <input type="text" id="lastname" name="lastname" /><div id="lastnamemessage" class="error"></div><br />
    <label>Password:</label> <input type="password" id="password" name="password" /><div id="passwordmatchmessage" class="error"></div><div id="passwordlength" class="error"></div><br />
    <label>Confirm Password</label> <input type="password" id="confirmpassword" name="confirmpassword" />
</form>

<button id="mybutton">Submit</button>

<script>

    //function ValidateUpper() {
    //    let p = document.querySelector('#password').value;
    //    var upperCaseLetters = /[A-Z]/g;
    //    if (p.value.match(upperCaseLetters)) {
    //        document.querySelector('#passwordupper').innerText = 'Your password must contain an uppercase letter'
    //    }
    //}

    function ProcessForm() {
        let f = document.querySelector('#firstname').value;
        let l = document.querySelector('#lastname').value;
        let p = document.querySelector('#password').value;
        let c = document.querySelector('#confirmpassword').value;

        if (!f || !l) {
            document.querySelector('#allfieldsmessage').innerText = 'Please fill in all fields.';
        }
        else if (f.length < 3) {
            document.querySelector('#firstnamemessage').innerText = 'Your first name must be longer then two characters.';
        }
        else if (l.length < 3) {
            document.querySelector('#lastnamemessage').innerText = 'Your last name must be longer than two characters.'
        }
        else if (p != c) {
            document.querySelector('#passwordmatchmessage').innerText = 'Your passwords must match.'
        }
        else if (p.length < 8) {
            document.querySelector('#passwordlength').innerText = 'Your password must be at least 8 characters long'
        }
    }

    let b = document.querySelector('#mybutton');
    b.addEventListener('click', ProcessForm);

</script>